@model WebApp.Models.RegisterViewModel
    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Register</h3>
                    <form class="row login_form" asp-action="Register" asp-controller="Account" method="post" id="contactForm" asp-anti-forgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input type="text" asp-for="Username" class="form-control" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
                            <span asp-validation-for="ConfirmPassword" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'">
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" asp-for="Surname" class="form-control" placeholder="Surname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Surname'">
                            <span asp-validation-for="Surname" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="tel" asp-for="Phone" class="form-control" placeholder="Phone" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Phone'">
                            <span asp-validation-for="Phone" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'">
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Register</button>
                            @*<a href="#">Forgot Password?</a>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
