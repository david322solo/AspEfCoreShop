<!-- Start Best Seller -->
@await Component.InvokeAsync("Menu")
    <div class="col-xl-9 col-lg-8 col-md-7">
        <!-- Start Filter Bar -->
        <div class="filter-bar d-flex flex-wrap align-items-center">
            <div class="sorting">
                <select>
                    <option value="1">Default sorting</option>
                    <option value="1">Default sorting</option>
                    <option value="1">Default sorting</option>
                </select>
            </div>
            <div class="sorting mr-auto">
                <select id="sort">
                    <option value="6">Show 6</option>
                    <option value="12">Show 12</option>
                    <option value="24">Show 24</option>
                </select>
            </div>
            <div class="pagination">
                @if (Model.PagingInfo.TotalPages > 1)
                {
                    <a asp-route-page="1" asp-route-category="@Model.CurrentCategory" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                    
                    if (Model.PagingInfo.ShowPrevious)
                    {
                        <a asp-route-page="@(Model.PagingInfo.CurrentPage - 1)" asp-route-category="@Model.CurrentCategory" >@(Model.PagingInfo.CurrentPage - 1)</a>
                    }
                    <a asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-category="@Model.CurrentCategory" class="active">@Model.PagingInfo.CurrentPage</a>
                    if (Model.PagingInfo.ShowNext)
                    {
                        <a asp-route-page="@(Model.PagingInfo.CurrentPage +1)" asp-route-category="@Model.CurrentCategory" >@(Model.PagingInfo.CurrentPage + 1)</a>
                    }
                    <a asp-route-page="@Model.PagingInfo.TotalPages" asp-route-category="@Model.CurrentCategory" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>

                }
            </div>
        </div>
        <!-- End Filter Bar -->
        <section class="lattest-product-area pb-40 category-list">
            @foreach (var product in Model.products)
            {
                <div class="row">
                    @foreach (var prod in product)
                    {
                        await Html.RenderPartialAsync("ProductSummary", (EFDataLibrary.Models.Product)prod);
                    }
                </div>
            }
        </section>
    </div>

<!-- End Best Seller -->
